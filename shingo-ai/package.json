{
  "name": "shingo-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Shingo AI Chatbot - CEO Takahashi's philosophy-driven AI assistant",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "collect-data": "tsx scripts/collect-data.ts",
    "setup-db": "tsx scripts/setup-db.ts",
    "test-rag": "tsx scripts/test-rag.ts",
    "dev:api": "npm run dev --workspace=packages/shingo-api",
    "dev:slack": "npm run dev --workspace=packages/slack-bot",
    "build:ext": "npm run build --workspace=packages/chrome-extension",
    "clean": "rimraf packages/*/dist"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0"
  }
}
